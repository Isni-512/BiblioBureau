<Window x:Class="HopitalDB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:properties="clr-namespace:HopitalDB.Properties"
        xmlns:local="clr-namespace:HopitalDB"
        mc:Ignorable="d"
        Title="{x:Static properties:Resources.Title}" Height="450" Width="800">
    <!-- Structure principale: DockPanel qui organise les éléments de l'interface -->
    <DockPanel>

        <!-- Barre de statut en bas pour afficher des informations sur l'état de l'application -->
        <StatusBar DockPanel.Dock="Bottom" Style="{StaticResource StatusBarStyle}">
            <StatusBarItem>
                <TextBlock x:Name="tbStatus" Text="Ready" Style="{StaticResource StatusBarTextStyle}"/>
            </StatusBarItem>
        </StatusBar>

        <!-- Sélecteur de langue permettant de basculer entre français et anglais -->
        <ComboBox x:Name="cbLangue" DockPanel.Dock="Top" SelectionChanged="cbLangue_SelectionChanged">
            <ComboBoxItem Content="Francais" Tag="fr-FR"/>
            <ComboBoxItem Content="English" Tag="en-CA"/>
        </ComboBox>

        <!-- Menu principal avec deux sections: "Action" pour CRUD et "Application" pour les fonctionnalités générales -->
        <Menu DockPanel.Dock="Top">
            <!-- Section "Action" contenant les options pour manipuler les données (Ajouter, Modifier, Supprimer) -->
            <MenuItem Header="Action">
                <MenuItem x:Name="miAjouter" Header="{x:Static properties:Resources.Add}"/>
                <MenuItem x:Name="miModifier" Header="{x:Static properties:Resources.Update}"/>
                <MenuItem x:Name="miSupprimer" Header="{x:Static properties:Resources.Delete}"/>
            </MenuItem>

            <!-- Sélecteur de langue permettant de basculer entre français et anglais -->
            <MenuItem x:Name="miLangue" Header="Langue" DockPanel.Dock="Top">
                <MenuItem x:Name="miFrancais" Header="Francais" Tag="fr-FR"/>
                <MenuItem x:Name="miAnglais" Header="English" Tag="en-CA"/>
            </MenuItem>
        </Menu>

        <!-- Barre d'outils avec des boutons pour les actions principales (Ajouter, Modifier, Supprimer) -->
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <!-- Bouton Ajouter avec une icône représentative -->
                <Button x:Name="toolbar_btn_Ajouter" ToolTip="{x:Static properties:Resources.Add}">
                    <Image Source="/Images/add.png"/>
                </Button>

                <!-- Bouton Modifier avec une icône représentative -->
                <Button x:Name="toolbar_btn_Modifier" ToolTip="{x:Static properties:Resources.Update}">
                    <Image Source="/Images/update.png"/>
                </Button>

                <!-- Bouton Supprimer avec une icône représentative -->
                <Button x:Name="toolbar_btn_Supprimer" ToolTip="{x:Static properties:Resources.Delete}">
                    <Image Source="/Images/delete.png"/>
                </Button>
            </ToolBar>
        </ToolBarTray>

        <!-- TabControl principal organisant les entités (Hôpital, Médecin, Infirmier) dans des onglets séparés -->
        <TabControl x:Name="tabcontrol" DockPanel.Dock="Top" Style="{StaticResource CustomTabControlStyle}">

            <!-- Onglet Hôpital: Gestion des informations relatives aux hôpitaux -->
            <TabItem x:Name="tabitemHopital" Header="{x:Static properties:Resources.Hospital}" Style="{StaticResource CustomTabItemStyle}">
                <StackPanel Orientation="Vertical">
                    <!-- Champ pour saisir le nom de l'hôpital -->
                    <StackPanel Orientation="Horizontal">
                        <Label Name="lbNomHopital" Content="{x:Static properties:Resources.Name}"/>
                        <TextBox x:Name="tbNomHopital"/>
                    </StackPanel>

                    <!-- Champ pour saisir l'adresse de l'hôpital -->
                    <StackPanel Orientation="Horizontal">
                        <Label Name="lbAdresseHopital" Content="{x:Static properties:Resources.Address}"/>
                        <TextBox x:Name="tbAdresseHopital"/>
                    </StackPanel>

                    <!-- Champ pour saisir le numéro de téléphone de l'hôpital -->
                    <StackPanel Orientation="Horizontal">
                        <Label Name="lbTelHopital" Content="{x:Static properties:Resources.Phone}"/>
                        <TextBox x:Name="tbTelHopital"/>
                    </StackPanel>

                    <!-- Groupe de boutons pour les opérations CRUD sur les hôpitaux -->
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="btnAjouterHopital" Content="{x:Static properties:Resources.Add}" Click="btnAjouterHopital_Click"/>
                        <Button x:Name="btnModifierHopital" Content="{x:Static properties:Resources.Update}" Click="btnModifierHopital_Click"/>
                        <Button x:Name="btnSupprimerHopital" Content="{x:Static properties:Resources.Delete}" Click="btnSupprimerHopital_Click"/>
                    </StackPanel>

                    <!-- Grille de données affichant la liste des hôpitaux avec leurs propriétés -->
                    <DataGrid x:Name="dgHopital" ItemsSource="{Binding Hopitaux}" SelectionChanged="dgHopital_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn x:Name="dgcNomHopital" Header="{x:Static properties:Resources.Name}" Binding="{Binding Nom}" Width="*"/>
                            <DataGridTextColumn x:Name="dgcAdresseHopital" Header="{x:Static properties:Resources.Address}" Binding="{Binding Adresse}" Width="*"/>
                            <DataGridTextColumn x:Name="dgcTelHopital" Header="{x:Static properties:Resources.Phone}" Binding="{Binding Telephone}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>

            <!-- Onglet Médecin: Gestion des informations relatives aux médecins -->
            <TabItem x:Name="tabitemMedecin" Header="{x:Static properties:Resources.Doctor}" Style="{StaticResource CustomTabItemStyle}">
                <StackPanel Orientation="Vertical">
                    <!-- Champ pour saisir le prénom du médecin -->
                    <StackPanel Orientation="Horizontal">
                        <Label Name="lbPrenomMed" Content="{x:Static properties:Resources.FirstName}"/>
                        <TextBox x:Name="tbPrenomMed"/>
                    </StackPanel>

                    <!-- Champ pour saisir le nom du médecin -->
                    <StackPanel Orientation="Horizontal">
                        <Label Name="lbNomMed" Content="{x:Static properties:Resources.LastName}"/>
                        <TextBox x:Name="tbNomMed"/>
                    </StackPanel>

                    <!-- Champ pour saisir le numéro de téléphone du médecin -->
                    <StackPanel Orientation="Horizontal">
                        <Label Name="lbTelMed" Content="{x:Static properties:Resources.Phone}"/>
                        <TextBox x:Name="tbTelMed"/>
                    </StackPanel>

                    <!-- Sélecteur d'hôpital associé au médecin -->
                    <StackPanel Orientation="Horizontal">
                        <Label x:Name="lbHopitalMed" Content="{x:Static properties:Resources.Hospital}"/>
                        <ComboBox Name="cbHopitalMedecin">
                            <ComboBoxItem Content="H1"/>
                            <ComboBoxItem Content="H2"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Groupe de boutons pour les opérations CRUD sur les médecins -->
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="btnAjouterMedecin" Content="{x:Static properties:Resources.Add}" Click="btnAjouterMedecin_Click"/>
                        <Button x:Name="btnModifierMedecin" Content="{x:Static properties:Resources.Update}" Click="btnModifierMedecin_Click"/>
                        <Button x:Name="btnSupprimerMedecin" Content="{x:Static properties:Resources.Delete}" Click="btnSupprimerMedecin_Click"/>
                    </StackPanel>

                    <!-- Grille de données affichant la liste des médecins avec leurs propriétés -->
                    <DataGrid x:Name="dgMedecin" ItemsSource="{Binding Medecins}" SelectionChanged="dgMedecin_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn x:Name="dgcNomMed" Header="{x:Static properties:Resources.LastName}" Binding="{Binding Nom}" Width="*"/>
                            <DataGridTextColumn x:Name="dgcPrenomMed" Header="{x:Static properties:Resources.FirstName}" Binding="{Binding Prenom}" Width="*"/>
                            <DataGridTextColumn x:Name="dgcTelMed" Header="{x:Static properties:Resources.Phone}" Binding="{Binding Telephone}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>

            <!-- Onglet Infirmier: Gestion des informations relatives aux infirmiers -->
            <TabItem x:Name="tabitemInfirmier" Header="{x:Static properties:Resources.Nurse}" Style="{StaticResource CustomTabItemStyle}">
                <StackPanel Orientation="Vertical">
                    <!-- Champ pour saisir le prénom de l'infirmier -->
                    <StackPanel Orientation="Horizontal">
                        <Label Name="lbPrenomInf" Content="{x:Static properties:Resources.FirstName}"/>
                        <TextBox x:Name="tbPrenomInf"/>
                    </StackPanel>

                    <!-- Champ pour saisir le nom de l'infirmier -->
                    <StackPanel Orientation="Horizontal">
                        <Label Name="lbNomInf" Content="{x:Static properties:Resources.LastName}"/>
                        <TextBox x:Name="tbNomInf"/>
                    </StackPanel>

                    <!-- Champ pour saisir le numéro de téléphone de l'infirmier -->
                    <StackPanel Orientation="Horizontal">
                        <Label Name="lbTelInf" Content="{x:Static properties:Resources.Phone}"/>
                        <TextBox x:Name="tbTelInf"/>
                    </StackPanel>

                    <!-- Sélecteur d'hôpital associé à l'infirmier -->
                    <StackPanel Orientation="Horizontal">
                        <Label Name="lbHopitalInf" Content="{x:Static properties:Resources.Hospital}"/>
                        <ComboBox x:Name="cbHopitalInfirmier">
                            <ComboBoxItem Content="H1"/>
                            <ComboBoxItem Content="H2"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Groupe de boutons pour les opérations CRUD sur les infirmiers -->
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="btnAjouterInf" Content="{x:Static properties:Resources.Add}" Click="btnAjouterInf_Click"/>
                        <Button x:Name="btnModifierInf" Content="{x:Static properties:Resources.Update}" Click="btnModifierInf_Click"/>
                        <Button x:Name="btnSupprimerInf" Content="{x:Static properties:Resources.Delete}" Click="btnSupprimerInf_Click"/>
                    </StackPanel>

                    <!-- Grille de données affichant la liste des infirmiers avec leurs propriétés -->
                    <DataGrid x:Name="dgInfirmier" ItemsSource="{Binding Infirmiers}" SelectionChanged="dgInfirmier_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn x:Name="dgcNomInf" Header="{x:Static properties:Resources.LastName}" Binding="{Binding Nom}" Width="*"/>
                            <DataGridTextColumn x:Name="dgcPrenomInf" Header="{x:Static properties:Resources.FirstName}" Binding="{Binding Prenom}" Width="*"/>
                            <DataGridTextColumn x:Name="dgcTelInf" Header="{x:Static properties:Resources.Phone}" Binding="{Binding Telephone}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>

            <TabItem Name="tabitemRecherche" Header="Recherche" Style="{StaticResource CustomTabItemStyle}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">

                        <Label x:Name="lbRecherche" Content="Recherche par:" Width="120"/>
                        <RadioButton x:Name="rbSelectionRechercheParHopital" Content="{x:Static properties:Resources.Hospital}" Checked="rbSelectionRechercheParHopital_Checked"/>
                        <RadioButton x:Name="rbSelectionRechercheMedecin" Content="{x:Static properties:Resources.Doctor}" Checked="rbSelectionRechercheMedecin_Checked"/>
                        <RadioButton x:Name="rbSelectionRechercheInfirmier" Content="{x:Static properties:Resources.Nurse}" Checked="rbSelectionRechercheInfirmier_Checked"/>

                    </StackPanel>
                    <StackPanel x:Name="spRechercheHopital" Orientation="Horizontal" Visibility="Visible">
                        <Label Content="{x:Static properties:Resources.Doctor}"/>
                        <RadioButton x:Name="rbRechercheParMedecin" Content="{x:Static properties:Resources.Doctor}" Checked="rbRechercheParMedecin_Checked"/>
                        <Label Content="{x:Static properties:Resources.Nurse}"/>
                        <RadioButton x:Name="rbRechercheParInfirmier" Content="{x:Static properties:Resources.Nurse}" Checked="rbRechercheParInfirmier_Checked"/>
                        <Label Content="{x:Static properties:Resources.Hospital}"/>
                        <ComboBox x:Name="cbRechercheParHopital" SelectionChanged="cbRechercheParHopital_SelectionChanged"/>
                    </StackPanel>

                    <StackPanel x:Name="spRechercheMedecin" Orientation="Horizontal" Visibility="Hidden">
                        <Label Content="{x:Static properties:Resources.Doctor}"/>
                        <TextBox x:Name="tbRechercheParMedecin" TextChanged="tbRechercheParMedecin_TextChanged"/>
                    </StackPanel>

                    <StackPanel x:Name="spRechercheInfirmier" Orientation="Horizontal" Visibility="Hidden">
                        <Label Content="{x:Static properties:Resources.Nurse}"/>
                        <TextBox x:Name="tbRechercheParInfirmier" TextChanged="tbRechercheParInfirmier_TextChanged"/>
                    </StackPanel>

                    <DataGrid x:Name="dgResultatRechercheHopital" Visibility="Visible">
                        <DataGrid.Columns>
                            <DataGridTextColumn x:Name="dgcResultatRechercheHopitalNom" Header="{x:Static properties:Resources.Name}" Binding="{Binding Nom}" Width="*"/>
                            <DataGridTextColumn x:Name="dgcResultatRechercheHopitalAdresse" Header="{x:Static properties:Resources.Address}" Binding="{Binding Adresse}" Width="*"/>
                            <DataGridTextColumn x:Name="dgcResultatRechercheHopitalTelephone" Header="{x:Static properties:Resources.Phone}" Binding="{Binding Telephone}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <DataGrid x:Name="dgResultatRechercheMedecin" Visibility="Collapsed">
                        <DataGrid.Columns>
                            <DataGridTextColumn x:Name="dgcResultatRechercheMedecinNom" Header="{x:Static properties:Resources.FirstName}" Binding="{Binding Nom}" Width="*"/>
                            <DataGridTextColumn x:Name="dgcResultatRechercheMedecinPrenom" Header="{x:Static properties:Resources.LastName}" Binding="{Binding Prenom}" Width="*"/>
                            <DataGridTextColumn x:Name="dgcResultatRechercheMedecintelephone" Header="{x:Static properties:Resources.Phone}" Binding="{Binding Telephone}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <DataGrid x:Name="dgResultatRechercheInfirmier" Visibility="Collapsed">
                        <DataGrid.Columns>
                            <DataGridTextColumn x:Name="dgcResultatRechercheInfirmierlNom" Header="{x:Static properties:Resources.FirstName}" Binding="{Binding Nom}" Width="*"/>
                            <DataGridTextColumn x:Name="dgcResultatRechercheInfirmierPrenom" Header="{x:Static properties:Resources.LastName}" Binding="{Binding Prenom}" Width="*"/>
                            <DataGridTextColumn x:Name="dgcResultatRechercheInfirmierTelephone" Header="{x:Static properties:Resources.Phone}" Binding="{Binding Telephone}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>


                </StackPanel>
                
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>